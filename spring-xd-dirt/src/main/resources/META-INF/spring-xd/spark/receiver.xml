<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="../bus/codec.xml"/>

	<bean id="messageBus" class="org.springframework.xd.dirt.integration.rabbit.RabbitMessageBus">
		<constructor-arg>
			<bean class="org.springframework.amqp.rabbit.connection.CachingConnectionFactory">
				<constructor-arg value="localhost"/>
			</bean>
		</constructor-arg>
		<constructor-arg ref="codec"/>
	</bean>

</beans>
